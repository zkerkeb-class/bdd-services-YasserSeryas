# Fichier d'exemple des variables d'environnement
# Copiez ce fichier vers .env et modifiez les valeurs

# Configuration de l'application
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Base de données MongoDB
MONGODB_URI=mongodb://admin:password@localhost:27017/billetterie?authSource=admin

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000

# Email (optionnel)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Monitoring (optionnel)
ENABLE_METRICS=true
METRICS_PORT=9090

# Sécurité
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Docker
COMPOSE_PROJECT_NAME=billetterie
